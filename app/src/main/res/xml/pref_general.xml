<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp">

    <ListPreference
        android:defaultValue="@string/pref_location_default"
        android:entries="@array/citiesArray"
        android:entryValues="@array/citiesValues"
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label">

    </ListPreference>

    <ListPreference
        android:defaultValue="@string/pref_temperature_default"
        android:entries="@array/unitsArray"
        android:entryValues="@array/unitsValues"
        android:key="@string/pref_temperature_key"
        android:title="@string/pref_temperature_label">

    </ListPreference>

</PreferenceScreen>